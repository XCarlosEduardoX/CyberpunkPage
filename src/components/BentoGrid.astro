---
interface Props {
    urlVideo1: string;
    urlVideo2: string;
    urlVideo3: string;
    urlVideo4: string;
    urlVideo5: string;
}

const { urlVideo1, urlVideo2, urlVideo3, urlVideo4, urlVideo5 } = Astro.props;
---

<div class="bento-grid">
    <div class="wrapper">
        <div class="grid1">
            <video autoplay muted loop playsinline="playsinline">
                <source
                    src={urlVideo3}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid2">
            <video autoplay muted loop playsinline="playsinline">
                <source
                    src={urlVideo5}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid3">
            <video autoplay muted loop playsinline="playsinline">
                <source
                    src={urlVideo1}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid4">
            <video autoplay muted loop playsinline="playsinline">
                <source
                    src={urlVideo2}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid5">
            <video autoplay muted loop playsinline="playsinline">
                <source
                    src={urlVideo4}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
    </div>
</div>
<style>
    .bento-grid video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 10px;
    }
    .bento-grid {
        width: 100%;
        height: auto;
    }
    .wrapper {
        display: grid;
        margin: 0 auto;
        max-width: 98%;
        grid-template-columns: repeat(9, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 10px;
    }

    .wrapper div {
        border-radius: 10px;
    }

    .grid1 {
        grid-column: 1/5;
        grid-row: 2/3;
    }
    .grid2 {
        grid-column: 5/7;
        grid-row: 1/3;
    }
    .grid3 {
        grid-column: 7/10;
        grid-row: 1/2;
    }

    .grid4 {
        grid-column: 7/10;
        grid-row: 2/3;
    }
    .grid5 {
        grid-column: 1/5;
        grid-row: 1/2;
    }

    /* Estilos para pantallas peque√±as */
    @media (max-width: 980px) {
        .wrapper {
            display: flex;
            flex-direction: column;
            max-width: 90%;
        }
    }
</style>
