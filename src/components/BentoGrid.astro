---
interface Props {
    urlVideo1: string;
    urlVideo2: string;
    urlVideo3: string;
    urlVideo4: string;
    urlVideo5: string;
}

const { urlVideo1, urlVideo2, urlVideo3, urlVideo4, urlVideo5 } = Astro.props;
---

<div class="bento-grid mb-20 bg">
    <div class="my-20">
        <h1
            class="text-center text-4xl font-bold tracking-tight text-white sm:text-5xl md:text-6xl p-6"
        >
            TV Spotligth
        </h1>
    </div>

    <div class="wrapper">
        <div class="grid1">
            <video
                poster="/images/static-tv-effect.gif"
                autoplay
                muted
                loop
                playsinline="playsinline"
            >
                <source
                    src={urlVideo3}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid2">
            <video
                poster="/images/static-tv-effect.gif"
                autoplay
                muted
                loop
                playsinline="playsinline"
            >
                <source
                    src={urlVideo5}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid3">
            <video
                poster="/images/static-tv-effect.gif"
                autoplay
                muted
                loop
                playsinline="playsinline"
            >
                <source
                    src={urlVideo1}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid4">
            <video
                poster="/images/static-tv-effect.gif"
                autoplay
                muted
                loop
                playsinline="playsinline"
            >
                <source
                    src={urlVideo2}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
        <div class="grid5">
            <video
                poster="/images/static-tv-effect.gif"
                autoplay
                muted
                loop
                playsinline="playsinline"
            >
                <source
                    src={urlVideo4}
                    type="video/mp4; codecs=av01.0.05M.08"
                />
            </video>
        </div>
    </div>
</div>
<style>
    .bg {
        padding: 14px;
    }
    .bento-grid {
        width: 80%;
        height: 100vh;
        margin-top: 10vh;
        margin-bottom: 10vh;
    }
    .bento-grid video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .wrapper {
        display: grid;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 0px;
    }

    .wrapper div {
        border-radius: 10px;
    }

    /* Asignación de áreas a los elementos */
    .grid1 {
        grid-area: 1 / 1 / 2 / 2; /* Inicio en la fila 1, columna 1; fin en la fila 2, columna 2 */
    }

    .grid2 {
        grid-area: 1 / 2 / 2 / 3; /* Inicio en la fila 1, columna 2; fin en la fila 2, columna 3 */
    }

    .grid3 {
        grid-area: 1 / 3 / 2 / 4; /* Inicio en la fila 1, columna 3; fin en la fila 2, columna 4 */
    }

    .grid4 {
        grid-area: 2 / 1 / 3 / 2; /* Inicio en la fila 2, columna 1; fin en la fila 3, columna 2 */
    }

    .grid5 {
        grid-area: 2 / 2 / 3 / 4; /* Inicio en la fila 2, columna 2; fin en la fila 3, columna 4 */
    }

    @media (max-width: 488px) {
        .bento-grid {
            width: 100%;
            height: auto;
        }
        .wrapper {
            display: grid;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 0px;
        }

        .grid1 {
            grid-area: 1 / 1 / 2 / 3; /* Inicio en la fila 1, columna 1; fin en la fila 2, columna 2 */
        }

        .grid2 {
            grid-area: 2 / 1 / 3 / 3; /* Inicio en la fila 1, columna 2; fin en la fila 2, columna 3 */
        }

        .grid3 {
            grid-area: 3 / 1 / 4 / 3; /* Inicio en la fila 1, columna 3; fin en la fila 2, columna 4 */
        }

        .grid4 {
            grid-area: 4 / 1 / 5 / 3; /* Inicio en la fila 2, columna 1; fin en la fila 3, columna 2 */
        }

        .grid5 {
            grid-area: 5 / 1 / 6 / 3; /* Inicio en la fila 2, columna 2; fin en la fila 3, columna 4 */
        }
    }
</style>
