---
import { URL_FINAL_VIDEO } from "../constants/urls";
import VideoSection from "../components/VideoSection.astro";
---

<section
    class="box-phantomliberty-section"
    id="phantomliberty-section"
    style="position: relative;"
>
    <VideoSection
        nameSection="phantomliberty"
        urlVideo={URL_FINAL_VIDEO}
        urlImage="/images/cyberpunk_2077_phantom_liberty.webp"
    /><div class="mx-10"></div>
</section>
<style>
    .box-edgerunners-section,
    .box-cyberpunk-section,
    .box-phantomliberty-section {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        z-index: 100;
    }
    .mx-10 {
        margin-left: 10%;
        margin-right: 10%;
    }
    .first-text {
        color: white;
        width: 100%;
        height: 80vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        z-index: 900;
    }
    .first-text p {
        font-size: 2.5rem !important;
        margin-bottom: 1rem;
        text-align: center;
        line-height: 1.1;
        font-weight: 500;
        color: white;
        letter-spacing: 1px;
    }

    @media (max-width: 768px) {
        .first-text p {
            font-size: 1.5rem !important;
            line-height: normal;
        }
    }
</style>
